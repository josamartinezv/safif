 /*Style general*/

 *{
  padding 0;
  margin 0;
 }

.container{
  margin 500px;
  }


 /*Style title*/
.h1
  font-family:  'Padauk', sans-serif;
  font-weight bold
  font-size: 2.5em

.icon {
  color: #fc7323
  }

  /*Style table*/
.table{
     text-align: center;
}

.error{
    color: red;
    }

.advice{
    color: #E66B01
    }

.inputF{
    width: 200px
    margin-left: 17em
    font-size:11px
}


  @media screen and (max-width: 600px) {
       table {
           width:100%;
       }
       thead {
           display: none;
       }
       tr:nth-of-type(2n) {
           background-color: inherit;
       }
       tr td:first-child {
           background: #f0f0f0;
           font-weight:bold;
           font-size:1.3em;
       }
       tbody td {
           display: block;
           text-align:center;
       }
       tbody td:before {
           content: attr(data-th);
           display: block;
           text-align:center;
       }
}
